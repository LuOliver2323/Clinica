@page
@model www.Pages.CondicaoPagamentoModel
@{
    ViewData["Title"] = "Cadastro de Condição de Pagamento";
}

<div class="row">
    <div class="col-12">
        <h1>
            <button type="button" id="btnPesquisar" class="btn btn-light" onclick="window.location.href='/PesquisaCondicao'">
                <img src="~/imagens/procurar.png" alt="Pesquisar" style="width: 20px; height: 20px;">
                Pesquisar
            </button>
            <center>Cadastro de Condição de Pagamento</center>
        </h1>
    </div>

    <div class="col-10 form-group">
        <button type="button" id="btnNovo" class="btn btn-success">Novo</button>
        <button type="button" id="btnEditar" class="btn btn-warning">Editar</button>
        <button type="button" id="btnInativar" class="btn btn-danger">Inativar</button>
    </div>

    <div class="col-2 form-group">
        <label for="ddlstatus">Status</label>
        <select id="ddlstatus" class="form-control" disabled>
            <option value="1">Ativo</option>
            <option value="0">Inativo</option>
        </select>
    </div>

    <div class="col-2 form-group">
        <label for="txtid">Código</label>
        <input type="text" id="txtid" value="0" class="form-control" readonly>
    </div>

    <div class="col-8 form-group">
        <label for="txtnome_condicao">Condição Pagamento</label>
        <input type="text" id="txtnome_condicao" placeholder="Insira o nome da condição de pagamento..." class="form-control" maxlength="50" disabled>
    </div>

    <div class="col-2 form-group">
        <label for="txtparcelas">Qtde Parcelas</label>
        <input type="number" id="txtparcelas" placeholder="" class="form-control" maxlength="3" disabled>
    </div>

    <div class="col-12 form-group">
        <button type="button" id="btnsalvar" class="btn btn-primary" disabled>Salvar</button>
    </div>

    <hr />
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/CondicaoPagamento.js"></script>
}
